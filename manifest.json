{
  "manifest_version": 3,
  "name": "Gemini Page Translator Pro",
  "version": "2.2",
  "description": "Translate web pages from any selected language to another using Gemini, with a dark mode UI and right-click support.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "service-worker.js"
  }
}