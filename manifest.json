{
  "manifest_version": 3,
  "name": "Gemini Page Translator Pro",
  "version": "2.1",
  "description": "Detects Chinese, translates to a language of your choice using a selected Gemini model with enhanced efficiency and right-click support.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}